<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#a49f9f"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient android:angle="315" android:startColor="#f1ce2b" android:centerColor="#fcdc46" android:endColor="#cdd10f" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>